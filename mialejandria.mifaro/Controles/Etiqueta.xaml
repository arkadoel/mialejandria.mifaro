<UserControl x:Class="mialejandria.mifaro.Controles.Etiqueta"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             MinHeight="35" Unloaded="UserControl_Unloaded" Width="3" MinWidth="62"  Background="{x:Null}">
    <Grid Background="{x:Null}" Margin="5">
        <Rectangle Fill="Yellow" Name="Fondo" RadiusX="5" RadiusY="5" Opacity="0.4"  >
            <Rectangle.Effect>
                <DropShadowEffect ShadowDepth="0" Direction="0" BlurRadius="3"/>
            </Rectangle.Effect>
        </Rectangle>
        <Label Content="X" FontFamily="Ver" FontWeight="ExtraBold" HorizontalContentAlignment="Right" FontSize="14" VerticalContentAlignment="Center" Foreground="White" Height="27" HorizontalAlignment="Right" Name="btnEliminar" MouseLeftButtonDown="btnEliminar_MouseLeftButtonDown" VerticalAlignment="Top" Width="24" />
        <Label Content="tres" FontFamily="Verdana" FontWeight="ExtraBold" VerticalContentAlignment="Center" Name="lblEtiqueta"  FontSize="11" Foreground="White" Margin="0,2,18,3" />    </Grid>
</UserControl>
