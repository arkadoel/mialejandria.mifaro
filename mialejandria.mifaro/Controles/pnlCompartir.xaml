<UserControl x:Class="mialejandria.mifaro.Controles.pnlCompartir"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="250" Width="300" Background="{x:Null}">
    <Grid>
        <Rectangle Fill="#FFD6D6F5" Margin="5" RadiusX="10" RadiusY="10" >
            <Rectangle.Effect>
                <DropShadowEffect ShadowDepth="15" BlurRadius="20" Direction="-90" RenderingBias="Performance" />
            </Rectangle.Effect>
        </Rectangle>
        <Label Content="Nuevo correo electronico" FontSize="14" Foreground="#FF2B2B2B" Height="28" HorizontalAlignment="Left" Margin="21,23,0,0" Name="lblMiOrdenador" VerticalAlignment="Top" />
        <Label Content="Otras acciones" FontSize="14" Foreground="#FF2B2B2B" Height="28" HorizontalAlignment="Left" Margin="21,63,0,0"  VerticalAlignment="Top" />
        <Image Margin="0,0,12,12" Name="image1" Stretch="Fill" HorizontalAlignment="Right" Opacity="0.7" MouseLeftButtonDown="image1_MouseLeftButtonDown" Width="22" Height="22" VerticalAlignment="Bottom" Source="/mialejandria.mifaro;component/Images/Very-Basic-Cancel-icon.png" />
    </Grid>
</UserControl>
